/* 暗色主题变量 */
[data-theme="dark"] {
    /* 主色调 */
    --ffs-primary-color: #177ddc;
    --ffs-primary-hover-color: #1f1f1f;
    --ffs-primary-active-color: #111b26;
    --ffs-primary-outline: rgba(24, 144, 255, 0.2);

    /* 成功色 */
    --ffs-success-color: #49aa19;
    --ffs-success-hover-color: #1f1f1f;
    --ffs-success-active-color: #111b26;
    --ffs-success-outline: rgba(82, 196, 26, 0.2);

    /* 警告色 */
    --ffs-warning-color: #d89614;
    --ffs-warning-hover-color: #1f1f1f;
    --ffs-warning-active-color: #111b26;
    --ffs-warning-outline: rgba(250, 173, 20, 0.2);

    /* 错误色 */
    --ffs-error-color: #d32029;
    --ffs-error-hover-color: #1f1f1f;
    --ffs-error-active-color: #111b26;
    --ffs-error-outline: rgba(255, 77, 79, 0.2);

    /* 中性色 */
    --ffs-text-color: rgba(255, 255, 255, 0.85);
    --ffs-text-color-secondary: rgba(255, 255, 255, 0.45);
    --ffs-disabled-color: rgba(255, 255, 255, 0.25);
    --ffs-border-color: #434343;
    --ffs-box-shadow: 0 2px 8px rgba(0, 0, 0, 0.45);
    --ffs-background-color: #141414;
    --ffs-background-color-light: #1f1f1f;
    --ffs-background-color-lighter: #262626;
    --ffs-background-color-extra-light: #303030;

    /* 字体 */
    --ffs-font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
        'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
        'Noto Color Emoji';
    --ffs-font-size-base: 14px;
    --ffs-font-size-lg: 16px;
    --ffs-font-size-sm: 12px;
    --ffs-line-height-base: 1.5715;
    --ffs-line-height-lg: 1.8;
    --ffs-line-height-sm: 1.4;

    /* 圆角 */
    --ffs-border-radius-sm: 2px;
    --ffs-border-radius-base: 4px;
    --ffs-border-radius-lg: 8px;
    --ffs-border-radius-circle: 50%;

    /* 间距 */
    --ffs-padding-xs: 4px;
    --ffs-padding-sm: 8px;
    --ffs-padding-md: 12px;
    --ffs-padding-lg: 16px;
    --ffs-padding-xl: 24px;
    --ffs-padding-xxl: 32px;

    /* 动画 */
    --ffs-animation-duration-base: 0.2s;
    --ffs-animation-duration-slow: 0.3s;
    --ffs-animation-timing-function: cubic-bezier(0.645, 0.045, 0.355, 1);

    /* 阴影 */
    --ffs-shadow-color: rgba(0, 0, 0, 0.45);
    --ffs-shadow-1-down: 0 2px 8px var(--ffs-shadow-color);
    --ffs-shadow-2-down: 0 4px 12px var(--ffs-shadow-color);
    --ffs-shadow-3-down: 0 6px 16px var(--ffs-shadow-color);
    --ffs-shadow-4-down: 0 8px 24px var(--ffs-shadow-color);

    /* 层级 */
    --ffs-zindex-dropdown: 1000;
    --ffs-zindex-sticky: 1020;
    --ffs-zindex-fixed: 1030;
    --ffs-zindex-modal-backdrop: 1040;
    --ffs-zindex-modal: 1050;
    --ffs-zindex-popover: 1060;
    --ffs-zindex-tooltip: 1070;
} 